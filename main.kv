<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

    Label:
        text: "Hardware Testing 3.0"
        id: toggle_motor_label
        size: 100, 100
        font_size: 100
        pos_hint:{"y":.3,"x": 0}
        color: 0, 0, 0, .8
        bold: True

    Label:
        text: "Copywrite Â© Dos Pueblos Engineering Academy 2020"
        id: toggle_motor_label
        size: 100, 100
        font_size: 30
        pos_hint:{"y":.23,"x": 0}
        color: 0, 0, 0, .5

    DPEAButton:
        text: "X"
        font_size: 20
        size: 60, 60
        x: root.width * .97
        y: root.height * .96
        color: 1, 0, 0, 1
        on_press: root.cleanup()
    DPEAButton:
        id:motors
        text: "Motors"
        size: 300, 150
        x: (root.width * 0.2) - 150
        y: root.height * 0.45
        color: 0, 1, 0, 1
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'motors'
    DPEAButton:
        text: "Drivers"
        id: drivers
        size: 300, 150
        font_size: 15
        x: (root.width * 0.5) - 150
        y: root.height * 0.45
        color: 0, 0, 1, 1
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'drivers'
    DPEAButton:
        id:switches
        text: "Switches"
        size: 300, 150
        x: (root.width * 0.8) - 150
        y: root.height * 0.45
        color: 1, 0, 0, 1
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'switches'

    ImageButton:
        id: switches
        source: "limitswitch.png"
        size: 300, 300
        x: (root.width * 0.8) - 150
        y: root.height * 0.1
        on_press: root.stanfordPressed()

    ImageButton:
        id: drivers
        source: "TALON.jpg"
        size: 300, 300
        x: (root.width * 0.5) - 150
        y: root.height * 0.1
        on_press: root.stanfordPressed()

    ImageButton:
        id: motors
        source: "servomotor.png"
        size: 300, 300
        x: (root.width * 0.2) - 150
        y: root.height * 0.1
        on_press: root.stanfordPressed()
