<SwitchMethods1Screen>:
    name: 'switchMethods1'
    on_enter: root.startThread()
    FloatLayout:
        size_hint: None, None

    Label:
        text: "Limit Switch Testing"
        size: 100, 100
        font_size: 100
        pos_hint:{"y":.3,"x": 0}
        color: 0, 0, 0, .8
        bold: True

    ImageButton:
        id: back
        source: "backarrow.png"
        size: 100, 100
        x: 10
        y: root.height * 0.9
        on_press: root.back()

    Label:
        text: "Plug into port P6"
        id: port_label
        size: 100, 100
        font_size: 50
        pos_hint:{"y":.2,"x": 0}
        color: 0, 0, 0, .5

    ImageButton:
        source: "limitswitch.png"
        size: 300, 300
        x: (root.width * 0.5) - 150
        y: root.height * 0.3

    Label:
        text: "Not Sensing"
        id: toggle_sensing_label
        size: 100, 100
        bold: True
        font_size: 50
        pos_hint:{"y":-.33,"x": 0}
        color: .8, 0, 0, .8


    DPEAButton:
        text: "Port 6"
        size: 300, 65
        x: (root.width * 0.15)- 150
        y: root.height * 0.6
        color: .6, .6, .6, .6
        on_press: root.port(6)

    DPEAButton:
        text: "Port 7"
        size: 300, 65
        x: (root.width * 0.15) - 150
        y: root.height * 0.5
        color: .6, .6, .6, .6
        on_press: root.port(7)

    DPEAButton:
        text: "Port 8"
        size: 300, 65
        x: (root.width * 0.15) - 150
        y: root.height * 0.4
        color: .6, .6, .6, .6
        on_press: root.port(8)
