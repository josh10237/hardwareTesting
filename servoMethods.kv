<ServoMethodsScreen>:
    name: 'servoMethods'
    FloatLayout:
        size_hint: None, None

    Label:
        text: "Servo Testing"
        size: 100, 100
        font_size: 100
        pos_hint:{"y":.35,"x": 0}
        color: 0, 0, 0, .8
        bold: True

    ImageButton:
        id: back
        source: "backarrow.png"
        size: 100, 100
        x: 10
        y: root.height * 0.9
        on_press: root.back()

    Label:
        text: "Plug into port P4"
        size: 100, 100
        font_size: 50
        pos_hint:{"y":.25,"x": 0}
        color: 0, 0, 0, .5

    ImageButton:
        source: "servomotor.png"
        size: 300, 300
        x: (root.width * 0.5) - 150
        y: root.height * 0.4


    Label:
        text: "Black on outside"
        size: 100, 100
        font_size: 50
        pos_hint:{"y":-.16,"x": 0}
        color: 0, 0, 0, .5


    DPEAButton:
        text: "Move Servo"
        size: 400, 150
        x: (root.width * 0.5) - 200
        y: root.height * 0.1
        color: 1, 0, 1, 1
        on_press: root.moveServo()