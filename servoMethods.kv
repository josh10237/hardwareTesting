<ServoMethodsScreen>:
    name: 'servoMethods'
    FloatLayout:
        size_hint: None, None

    Label:
        text: "Servo Testing"
        size: 100, 100
        font_size: 100
        pos_hint:{"y":.35,"x": 0}
        color: 0, 0, 0, .8
        bold: True

    ImageButton:
        id: back
        source: "backarrow.png"
        size: 100, 100
        x: 10
        y: root.height * 0.9
        on_press: root.back()

    Label:
        text: "Plug into port P4"
        size: 100, 100
        font_size: 50
        pos_hint:{"y":.25,"x": 0}
        color: 0, 0, 0, .5

    ImageButton:
        source: "servomotor.png"
        size: 300, 300
        x: (root.width * 0.5) - 150
        y: root.height * 0.4


    Label:
        text: "Black on outside"
        size: 100, 100
        font_size: 50
        pos_hint:{"y":-.16,"x": 0}
        color: 0, 0, 0, .5

    Label:
        text: "50%"
        id: percent_label
        size: 100, 100
        font_size: 50
        pos_hint:{"y":-.3,"x": 0}
        color: 0, 0, 0, .5


    DPEAButton:
        text: "Toggle Servo"
        size: 400, 150
        x: (root.width * 0.2) - 200
        y: root.height * 0.5
        color: 1, 0, 1, 1
        on_release: root.updateLabel("move")

    DPEAButton:
        text: "Reset Servo"
        size: 400, 150
        x: (root.width * 0.8) - 200
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_release: root.updateLabel("reset")


    Slider:
        id: servo_slider
        size_hint_x: .5
        size_hint_y: .25
        x: root.width * 0.25
        y: 0
        min: 0
        max: 100
        value: 50
        step: 1
        on_touch_up: root.updateLabel("none")
